<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Low_Attendance_Student_Alert</fullName>
        <description>Alert sent to students when attendance falls below 75%</description>
        <protected>false</protected>
        <recipients>
            <field>Student_Email__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>CampusConnect_Templates/Low_Attendance_Alert</template>
    </alerts>
    <fieldUpdates>
        <fullName>Update_Student_Status_At_Risk</fullName>
        <description>Updates student status to At Risk when attendance is low</description>
        <field>Status__c</field>
        <literalValue>At Risk</literalValue>
        <name>Update Student Status At Risk</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Low_Attendance_Alert_Rule</fullName>
        <actions>
            <name>Low_Attendance_Student_Alert</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Update_Student_Status_At_Risk</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Student__c.Attendance_Percentage__c</field>
            <operation>lessThan</operation>
            <value>75</value>
        </criteriaItems>
        <description>Triggers alerts and status updates for students with low attendance</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
