<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Event_End_Date_After_Start_Date</fullName>
    <active>true</active>
    <description>Ensures event end date is after start date</description>
    <errorConditionFormula>AND(
    NOT(ISBLANK(End_Date__c)),
    NOT(ISBLANK(Date__c)),
    End_Date__c &lt;= DATETIMEVALUE(Date__c)
)</errorConditionFormula>
    <errorDisplayField>End_Date__c</errorDisplayField>
    <errorMessage>Event End Date must be after the Start Date. Please check your dates.</errorMessage>
</ValidationRule>
